#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash imagemagick
# shellcheck shell=bash

magick "$1" -resize 36x36 android-icon-36x36.png
magick "$1" -resize 48x48 android-icon-48x48.png
magick "$1" -resize 72x72 android-icon-72x72.png
magick "$1" -resize 96x96 android-icon-96x96.png
magick "$1" -resize 144x144 android-icon-144x144.png
magick "$1" -resize 192x192 android-icon-192x192.png

magick "$1" -resize 57x75 apple-icon-57x57.png
magick "$1" -resize 60x60 apple-icon-60x60.png
magick "$1" -resize 72x72 apple-icon-72x72.png
magick "$1" -resize 76x76 apple-icon-76x76.png
magick "$1" -resize 114x114 apple-icon-114x114.png
magick "$1" -resize 120x120 apple-icon-120x120.png
magick "$1" -resize 144x144 apple-icon-144x144.png
magick "$1" -resize 152x152 apple-icon-152x152.png
magick "$1" -resize 180x180 apple-icon-180x180.png
magick "$1" -resize 192x192 apple-icon.png
magick "$1" -resize 192x192 apple-icon-precomposed.png

magick "$1" -resize 16x16 favicon-16x16.png
magick "$1" -resize 32x32 favicon-32x32.png
magick "$1" -resize 96x96 favicon-96x96.png
magick "$1" favicon.ico

magick "$1" -resize 70x70 ms-icon-70x70.png
magick "$1" -resize 144x144 ms-icon-144x144.png
magick "$1" -resize 150x150 ms-icon-150x150.png
magick "$1" -resize 310x310 ms-icon-310x310.png

# vim:ft=sh
