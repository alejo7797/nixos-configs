# Nix snippets

snippet module Simple NixOS / Home Manager module
        {
          lib,
          config,
          pkgs,
          ...
        }:

        let
          cfg = config.${1:myNixOS}.${2:name};
        in

        {
          options.${1}.${2}.enable = lib.mkEnableOption "${3:fullName}";

          config = lib.mkIf cfg.enable {

            $0

          };
        }
